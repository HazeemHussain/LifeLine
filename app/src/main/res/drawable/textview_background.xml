<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners for a smooth look -->
    <corners android:radius="15dp" />

    <!-- Padding for internal spacing -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />

    <!-- Gradient matching the overall green theme -->
    <gradient
        android:startColor="#A5D6A7"
    android:endColor="#66BB6A"
    android:angle="90" />

    <!-- Optional stroke for outlining the text view -->
    <stroke
        android:width="2dp"
        android:color="#388E3C" /> <!-- Darker green for contrast -->


</shape>
